systemLog:
  destination: file
  logAppend: true
  logRotate: reopen
  path: /var/log/mongodb/mongod.log
  
storage:
  dbPath: /data/appdb
  journal:
    enabled: true
  wiredTiger:
    engineConfig:
       cacheSizeGB: 8
       
processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid
  timeZoneInfo: /usr/share/zoneinfo
  
net:
  port: 37019
  bindIp: 127.0.0.1, {{ ansible_fqdn }}
      
#security:
#  authorization: enabled
#  clusterAuthMode: x509
{% if ops_server_2|length or ops_server_3|length %}
replication:
  replSetName: {{ repset }}
{% else %}

{% endif %}
