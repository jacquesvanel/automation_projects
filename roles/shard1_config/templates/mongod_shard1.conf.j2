systemLog:
  destination: file
  path: "/var/log/mongodb/{{ env }}/{{ replName[0] }}-{{ sys[0] }}.log"
processManagement:
  fork: {{ fork }}
security:
  keyFile: "/data/{{ env }}/keyfile.pem"
net:
  port: {{ port[0] }}
  bindIp: localhost,{{ ansible_hostname }}
sharding:
  clusterRole: {{ servertype[0] }}
replication:
  replSetName: {{ replName[0] }}_{{ env }}
storage:
  dbPath: /data/{{ env }}/{{ shard[0] }}/{{ sys[0] }}
  wiredTiger:
    engineConfig:
      cacheSizeGB: 2

