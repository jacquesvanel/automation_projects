systemLog:
  destination: file
  path: "/var/log/mongodb/{{ env }}/{{ item.host_config }}.log"
  logAppend: true
  logRotate: reopen
processManagement:
  fork: true
  pidFilePath: "/var/run/mongodb/{{ env }}/mongod-{{ item.host_config }}.pid"
net:
  port: {{ item.port }}
  bindIp: localhost,{{ ansible_fqdn }}
storage:
  dbPath: {{ item.path }}
