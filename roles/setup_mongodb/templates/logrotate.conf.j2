#/etc/logrotate.d/
/var/log/mongodb/*/* {
    daily
    rotate 5
    compress
    delaycompress
    size 4000k
#    dateext
    missingok
    notifempty
    sharedscripts
    copytruncate
    postrotate
        /bin/kill -SIGUSR1 `find /var/run/mongodb/ -name "*.pid" -exec cat {} \; 2> /dev/null|xargs` 2> /dev/null || true
    endscript
}
