[Unit]
Description=mongos
After=syslog.target
After=network.target

[Service]
User=mongod
Group=opr-db-admin
PIDFile=/var/run/mongo/mongos-{{ mongos_port }}.pid
PermissionsStartOnly=true
#ExecStartPre=/opt/OmniMongoDB/ansible/mongos_pre.sh
ExecStart=/usr/bin/mongos --quiet \
    --config /etc/mongo/{{ env }}/mongoS1.cfg 
LimitFSIZE=infinity
LimitCPU=infinity
LimitAS=infinity
LimitNOFILE=64000
LimitNPROC=64000
TasksAccounting=false

[Install]
WantedBy=multi-user.target
