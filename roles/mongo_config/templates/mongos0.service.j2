[Unit]
Description=mongos
After=syslog.target
After=network.target

[Service]
User=mongod
Group=opr-db-admin
PIDFile=/var/run/mongodb/{{ env }}/mongos-37017.pid
PermissionsStartOnly=true
ExecStart=/usr/bin/mongos --quiet \
    --config /etc/mongo/{{ env }}/mongoS0.cfg 
LimitFSIZE=infinity
LimitCPU=infinity
LimitAS=infinity
LimitNOFILE=64000
LimitNPROC=64000
TasksAccounting=false

[Install]
WantedBy=multi-user.target
